

<%= form_with(model: @job) do |f| %>
  <div>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </div><br>
  <div>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </div><br>
  <div>
    <%= f.label :salary %> <br>
    <%= f.text_field :salary %>
  </div><br>
  <div>
    <%= f.label :level %> <br>
    <%= f.select :level, ['Junior', 'Senior', 'Pleno'] %>
  </div><br>
  <div>
    <%= f.label :requirements %> <br>
    <%= f.text_area :requirements %>
  </div><br>
  <div>
    <%= f.label :deadline %> <br>
    <%= f.date_field(:deadline, :start_year => 2021)%>
  </div><br>
  <div>
    <%= f.label :total %> <br>
    <%= f.text_field :total %>
  </div> <br>
  <div>
    <%= f.submit %>
  </div>

<% end %>